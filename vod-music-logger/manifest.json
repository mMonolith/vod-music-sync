{
    "manifest_version": 3,
    "name": "VOD Music Sync",
    "version": "12.0",
    "description": "Syncs music with muted Twitch/YouTube VODs using YouTube.",
    "permissions": [
        "storage",
        "scripting",
        "tabs",
        "alarms"
    ],
    "host_permissions": [
        "*://*.twitch.tv/*",
        "*://*.youtube.com/*",
        "*://*.googleapis.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.twitch.tv/videos/*",
                "*://*.youtube.com/watch*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "VOD Music Sync"
    },
    "options_page": "options.html",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "web_accessible_resources": [{
        "resources": ["/icons/sync_icon48.png"],
        "matches": ["<all_urls>"]
    }],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self';",
        "sandbox": "sandbox allow-scripts; script-src 'self' 'https://www.youtube.com';"
    }
}